# $NetBSD: INSTALL,v 1.10 2018/12/11 17:49:40 schmonz Exp $

case "${STAGE}" in

PRE-INSTALL)
	cd ${PKG_SYSCONFDIR}
	for i in ofmip pop3 smtp; do
		s="tcp.${i}"
		[ -f "${s}" ] && ${MV} -f "${s}" "control/tcprules/${i}"
		[ -f "${s}.cdb" ] && ${RM} -f "${s}.cdb"
	done

	;;

POST-INSTALL)
	cd ${PKG_SYSCONFDIR}/control/tcprules
	for i in ofmip pop3 smtp; do
		${CHMOD} 644 ${i}
		${PREFIX}/bin/tcprules ${i}.cdb ${i}.tmp < ${i}
		${CHMOD} 644 ${i}.cdb
	done

	;;
esac
